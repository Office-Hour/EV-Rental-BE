@page "{id:guid}"
@using Domain.Enums
@model WebApp.Areas.Staff.Pages.Bookings.DetailsModel
@{
    ViewData["Title"] = "Chi Tiết Đặt Chỗ - Staff";
    var rentalId = ViewData["RentalId"];
}

<link rel="stylesheet" href="~/css/Index.css" asp-append-version="true" />
<style>
    /* ======= Inline Styles: Staff Shared ======= */
    .staff-container {
        max-width: 1100px;
        margin: 0 auto;
    }

    .staff-hero {
        background: linear-gradient(135deg, #0f172a, #1e293b);
        color: #fff;
        border-bottom: 4px solid #0ea5e9;
    }

        .staff-hero .btn.btn-outline-light {
            border-width: 2px;
        }

    .animate-slide-up {
        animation: slideUp .35s ease-out;
    }

    .animate-slide-in {
        animation: slideIn .35s ease-out;
    }

    .animate-pulse-once {
        animation: pulseOnce .6s ease-in-out;
    }

    @@keyframes slideUp {
        from {
            transform: translateY(6px);
            opacity: .6;
        }

        to {
            transform: translateY(0);
            opacity: 1;
        }
    }

    @@keyframes slideIn {
        from {
            transform: translateX(6px);
            opacity: .6;
        }

        to {
            transform: translateX(0);
            opacity: 1;
        }
    }

    @@keyframes pulseOnce {
        0% {
            transform: scale(1);
        }

        50% {
            transform: scale(1.01);
        }

        100% {
            transform: scale(1);
        }
    }

    /* ======= Timeline ======= */
    .status-timeline-item {
        display: flex;
        align-items: center;
        gap: .75rem;
        position: relative;
    }

    .status-timeline-dot {
        width: 40px;
        height: 40px;
        border-radius: 9999px;
        display: grid;
        place-items: center;
        background: #e5e7eb;
        color: #0f172a;
        font-weight: 700;
    }

    .status-timeline-item.active .status-timeline-dot {
        background: linear-gradient(135deg, #0ea5e9, #10b981);
        color: #fff;
        box-shadow: 0 6px 20px rgba(16, 185, 129, .25);
    }

    .status-timeline-label small {
        line-height: 1;
    }

    .status-timeline-line {
        height: 4px;
        width: 56px;
        border-radius: 2px;
        background: #e5e7eb;
    }

        .status-timeline-line.active {
            background: linear-gradient(90deg, #0ea5e9, #10b981);
        }

    /* ======= Accent Cards ======= */
    .staff-card-accent-start-warning {
        border-left: 6px solid #f59e0b;
    }

    .staff-card-accent-start-success {
        border-left: 6px solid #10b981;
    }

    /* ======= Utility ======= */
    .staff-no-resize {
        resize: none;
    }
</style>

<!-- Hero Section -->
<section class="py-5 staff-hero">
    <div class="container staff-container">
        <div class="d-flex justify-content-between align-items-center flex-wrap gap-3">
            <div class="text-white">
                <h1 class="fw-bold mb-2">📅 Chi Tiết Đặt Chỗ</h1>
                <p class="fs-5 text-white-50 mb-0">Xem và xác minh thông tin đặt chỗ</p>
            </div>
            <a asp-page="./Index" class="btn btn-outline-light rounded-pill px-4 py-2">
                ← Quay Lại
            </a>
        </div>
    </div>
</section>

<section class="py-5 bg-light">
    <div class="container staff-container">

        @if (Model.Booking != null)
        {
            <!-- Status Timeline -->
            <div class="mb-4">
                <div class="bg-white p-4 rounded-3 shadow-lg">
                    <div class="d-flex align-items-center justify-content-between flex-wrap gap-3">
                        <div class="d-flex align-items-center gap-3">
                            <div class="status-timeline-item @(Model.Booking.Status == BookingStatus.Pending_Verification || Model.Booking.Status == BookingStatus.Verified ? "active" : "")">
                                <div class="status-timeline-dot">1</div>
                                <div class="status-timeline-label">
                                    <small class="d-block fw-semibold">Chờ Xác Minh</small>
                                    @if (Model.Booking.BookingCreatedAt != default)
                                    {
                                        <small class="text-muted" style="font-size: 0.7rem;">@Model.Booking.BookingCreatedAt.ToString("HH:mm dd/MM")</small>
                                    }
                                </div>
                            </div>
                            <div class="status-timeline-line @(Model.Booking.Status == BookingStatus.Verified ? "active" : "")"></div>
                            <div class="status-timeline-item @(Model.Booking.Status == BookingStatus.Verified ? "active" : "")">
                                <div class="status-timeline-dot">2</div>
                                <div class="status-timeline-label">
                                    <small class="d-block fw-semibold">Đã Xác Minh</small>
                                    @if (Model.Booking.VerifiedAt.HasValue)
                                    {
                                        <small class="text-muted" style="font-size: 0.7rem;">@Model.Booking.VerifiedAt.Value.ToString("HH:mm dd/MM")</small>
                                    }
                                </div>
                            </div>
                        </div>
                        <div>
                            @{
                                var statusBadge = Model.Booking.Status switch
                                {
                                    BookingStatus.Pending_Verification => ("bg-warning", "⏳ Chờ Xác Minh"),
                                    BookingStatus.Verified => ("bg-success", "✅ Đã Xác Minh"),
                                    BookingStatus.Rental_Created => ("bg-info", "🚗 Đã Tạo Rental"),
                                    BookingStatus.Cancelled => ("bg-danger", "❌ Đã Hủy"),
                                    _ => ("bg-secondary", "Không xác định")
                                };
                            }
                            <span class="badge @statusBadge.Item1 px-4 py-2 rounded-pill">@statusBadge.Item2</span>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4">
                <div class="col-md-8">
                    <!-- Main Info Card -->
                    <div class="bg-white p-4 rounded-3 shadow-lg mb-4 animate-slide-up">
                        <div class="d-flex align-items-center gap-2 mb-4 pb-3 border-bottom">
                            <h2 class="fw-semibold text-dark mb-0">ℹ️ Thông Tin Đặt Chỗ</h2>
                        </div>
                        <div>
                            <div class="row g-3">
                                <!-- IDs Section -->
                                <div class="col-12">
                                    <div class="p-4 rounded-2 border-start border-5 border-primary" style="background: linear-gradient(135deg, #eff6ff 0%, #dbeafe 100%);">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-center gap-2">
                                                    <div style="font-size: 1.5rem;">📋</div>
                                                    <div>
                                                        <small class="text-muted d-block" style="font-size: 0.7rem;">MÃ ĐẶT CHỖ</small>
                                                        <code class="fw-bold text-primary" style="font-size: 0.95rem;">@Model.Booking.BookingId</code>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-center gap-2">
                                                    <div style="font-size: 1.5rem;">👤</div>
                                                    <div>
                                                        <small class="text-muted d-block" style="font-size: 0.7rem;">RENTER ID</small>
                                                        <code class="fw-bold text-primary" style="font-size: 0.95rem;">@Model.Booking.RenterId</code>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Time Section -->
                                <div class="col-12">
                                    <div class="p-4 rounded-2 border-start border-5 border-success" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);">
                                        <div class="row g-3">
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-start gap-2">
                                                    <div style="font-size: 1.5rem;">🕐</div>
                                                    <div class="flex-grow-1">
                                                        <small class="text-success fw-semibold d-block" style="font-size: 0.7rem;">THỜI GIAN BẮT ĐẦU</small>
                                                        <div class="fw-bold text-dark" style="font-size: 1.1rem;">@Model.Booking.StartTime.ToString("dd/MM/yyyy")</div>
                                                        <small class="text-secondary fw-semibold">@Model.Booking.StartTime.ToString("HH:mm")</small>
                                                    </div>
                                                </div>
                                            </div>
                                            <div class="col-md-6">
                                                <div class="d-flex align-items-start gap-2">
                                                    <div style="font-size: 1.5rem;">📅</div>
                                                    <div class="flex-grow-1">
                                                        <small class="text-success fw-semibold d-block" style="font-size: 0.7rem;">THỜI GIAN KẾT THÚC</small>
                                                        <div class="fw-bold text-dark" style="font-size: 1.1rem;">@Model.Booking.EndTime.ToString("dd/MM/yyyy")</div>
                                                        <small class="text-secondary fw-semibold">@Model.Booking.EndTime.ToString("HH:mm")</small>
                                                    </div>
                                                </div>
                                            </div>
                                            @{
                                                var totalHours = (Model.Booking.EndTime - Model.Booking.StartTime).TotalHours;
                                            }
                                            <div class="col-12">
                                                <div class="alert alert-success d-flex align-items-center justify-content-between mb-0 py-2" role="alert">
                                                    <div>
                                                        <strong>⏱️ Tổng thời gian thuê:</strong> @Math.Round(totalHours, 1) giờ (@Math.Ceiling(totalHours / 24) ngày)
                                                    </div>
                                                    <span class="badge bg-success-subtle text-success border border-success rounded-pill px-3 py-2" style="font-size: .8rem;">
                                                        @Math.Round(totalHours)h
                                                    </span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <!-- Status Section -->
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded-2 text-center">
                                        <small class="text-muted d-block mb-2" style="font-size: 0.7rem;">TRẠNG THÁI BOOKING</small>
                                        @switch (Model.Booking.Status)
                                        {
                                            case BookingStatus.Pending_Verification:
                                                <span class="badge bg-warning text-dark rounded-pill px-4 py-2 fs-6">⏳ Chờ Xác Minh</span>
                                                break;
                                            case BookingStatus.Verified:
                                                <span class="badge bg-success rounded-pill px-4 py-2 fs-6">✅ Đã Xác Minh</span>
                                                break;
                                            case BookingStatus.Cancelled:
                                                <span class="badge bg-danger rounded-pill px-4 py-2 fs-6">❌ Đã Hủy</span>
                                                break;
                                        }
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="p-3 bg-light rounded-2 text-center">
                                        <small class="text-muted d-block mb-2" style="font-size: 0.7rem;">KẾT QUẢ XÁC MINH</small>
                                        @switch (Model.Booking.VerificationStatus)
                                        {
                                            case BookingVerificationStatus.Pending:
                                                <span class="badge bg-secondary rounded-pill px-4 py-2 fs-6">⏳ Chờ</span>
                                                break;
                                            case BookingVerificationStatus.Approved:
                                                <span class="badge bg-success rounded-pill px-4 py-2 fs-6">✓ Đã Duyệt</span>
                                                break;
                                            case BookingVerificationStatus.Rejected_Mismatch:
                                                <span class="badge bg-danger rounded-pill px-4 py-2 fs-6">✗ Không Khớp</span>
                                                break;
                                            case BookingVerificationStatus.Rejected_Other:
                                                <span class="badge bg-danger rounded-pill px-4 py-2 fs-6">✗ Từ Chối</span>
                                                break;
                                        }
                                    </div>
                                </div>
                                @if (Model.Booking.VerifiedAt.HasValue)
                                {
                                    <div class="col-12">
                                        <div class="p-3 bg-light rounded-2">
                                            <small class="text-muted d-block mb-1">Xác Minh Lúc</small>
                                            <div class="fw-semibold text-dark">@Model.Booking.VerifiedAt.Value.ToString("dd/MM/yyyy HH:mm")</div>
                                        </div>
                                    </div>
                                }
                                @if (!string.IsNullOrEmpty(Model.Booking.CancelReason))
                                {
                                    <div class="col-12">
                                        <div class="alert alert-danger rounded-2 mb-0" role="alert">
                                            <small class="d-block mb-1 fw-semibold">Lý Do Hủy</small>
                                            <div class="text-dark">@Model.Booking.CancelReason</div>
                                        </div>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-md-4">
                    @if (Model.Booking.Status == BookingStatus.Pending_Verification)
                    {
                        <div class="bg-white p-4 rounded-3 shadow-lg animate-slide-in staff-card-accent-start-warning">
                            <div class="mb-4 text-center">
                                <div style="font-size: 3rem; margin-bottom: 0.5rem;">🔐</div>
                                <h2 class="fw-bold text-dark mb-1 fs-5">Xác Minh Đặt Chỗ</h2>
                                <small class="text-muted">Vui lòng kiểm tra và xác nhận</small>
                            </div>
                            <div>
                                <form method="post" asp-page-handler="Approve" id="verificationForm">
                                    <div asp-validation-summary="ModelOnly" class="alert alert-danger rounded-2"></div>

                                    <div class="mb-4">
                                        <label class="form-label fw-semibold text-dark mb-2">
                                            <span style="color: #f59e0b;">⭐</span> Kết Quả Xác Minh
                                        </label>
                                        <select asp-for="Input.VerificationStatus" class="form-select form-select-lg rounded-2 border-2" aria-label="Kết quả xác minh">
                                            <option value="" selected disabled>-- Chọn kết quả --</option>
                                            <option value="@BookingVerificationStatus.Approved">✅ Duyệt</option>
                                            <option value="@BookingVerificationStatus.Rejected_Mismatch">❌ Từ Chối - Không Khớp</option>
                                            <option value="@BookingVerificationStatus.Rejected_Other">❌ Từ Chối - Lý Do Khác</option>
                                        </select>
                                        <span asp-validation-for="Input.VerificationStatus" class="text-danger small"></span>
                                    </div>

                                    <div class="mb-4">
                                        <label asp-for="Input.CancelReason" class="form-label fw-semibold text-dark mb-2">
                                            📝 Lý Do (nếu từ chối)
                                        </label>
                                        <textarea asp-for="Input.CancelReason" class="form-control rounded-2 border-2 staff-no-resize" rows="4" placeholder="Nhập lý do từ chối (nếu có)..." aria-describedby="cancelHelp"></textarea>
                                        <small id="cancelHelp" class="text-muted mt-1 d-block">Bắt buộc nếu từ chối đặt chỗ</small>
                                    </div>

                                    <div class="d-grid gap-2">
                                        <button type="submit" class="btn btn-success rounded-pill py-3 fw-bold shadow-sm" style="font-size: 1.05rem;">
                                            <span style="font-size: 1.2rem;">✓</span> Xác Nhận Kết Quả
                                        </button>
                                        <small class="text-center text-muted mt-2 d-block">
                                            ⚠️ Hành động này không thể hoàn tác
                                        </small>
                                    </div>
                                </form>
                            </div>
                        </div>
                    }
                    else if (Model.Booking.Status == BookingStatus.Verified)
                    {
                        <div class="bg-white p-4 rounded-3 shadow-lg animate-pulse-once staff-card-accent-start-success">
                            <div class="mb-4 text-center">
                                <div style="font-size: 3.5rem; margin-bottom: 0.5rem;">✅</div>
                                <h2 class="fw-bold text-success mb-1 fs-5">Đã Xác Minh</h2>
                                <small class="text-muted">Booking đã được duyệt thành công</small>
                            </div>
                            <div class="alert alert-success rounded-2 mb-3" role="alert">
                                <div class="d-flex align-items-center gap-2">
                                    <div style="font-size: 1.5rem;">🎉</div>
                                    <div>
                                        <strong class="d-block">Hoàn tất!</strong>
                                        <small>Bạn có thể tạo Rental cho khách hàng</small>
                                    </div>
                                </div>
                            </div>
                            <div class="d-grid gap-2">
                                <a asp-area="Staff" asp-page="/Rentals/Create" asp-route-bookingId="@Model.Booking.BookingId"
                                   class="btn btn-success rounded-pill py-3 fw-bold" style="font-size: 1.05rem;">
                                    <span style="font-size: 1.2rem;">🚗</span> Tạo Rental Ngay
                                </a>
                                <small class="text-center text-muted mt-1">
                                    Tạo hợp đồng thuê xe cho booking này
                                </small>
                            </div>

                        </div>
                    }
                    else if (Model.Booking.Status == BookingStatus.Rental_Created)
                    {
                        <div class="bg-white p-4 rounded-3 shadow-lg animate-pulse-once staff-card-accent-start-success">
                            <div class="mb-4 text-center">
                                <div style="font-size: 3.5rem; margin-bottom: 0.5rem;">✅</div>
                                <h2 class="fw-bold text-success mb-1 fs-5">Đã Tạo Đơn Thuê</h2>
                                <small class="text-muted">Rental đã được tạo</small>
                            </div>

                            <div class="d-grid gap-2">
                                <a asp-area="Staff" asp-page="/Rentals/Details" asp-route-id="@rentalId"
                                   class="btn btn-success rounded-pill py-3 fw-bold" style="font-size: 1.05rem;">
                                    <span style="font-size: 1.2rem;">🚗</span> Xem chi tiết Rental
                                </a>
                            </div>
                        </div>
                    }
                </div>
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4" style="font-size: 5rem;">🔍</div>
                <h3 class="text-secondary mb-2">Không tìm thấy đặt chỗ</h3>
                <p class="text-muted">Đặt chỗ không tồn tại hoặc đã bị xóa.</p>
            </div>
        }
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
