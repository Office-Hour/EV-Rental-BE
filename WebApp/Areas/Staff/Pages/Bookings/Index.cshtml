@page
@using Domain.Enums
@model WebApp.Areas.Staff.Pages.Bookings.IndexModel
@{
    ViewData["Title"] = "Quản Lý Đặt Chỗ";
}

<link rel="stylesheet" href="~/css/staff-shared.css" asp-append-version="true" />
<link rel="stylesheet" href="~/css/staff-bookings.css" asp-append-version="true" />

<!-- Hero Section -->
<section class="py-5 staff-hero">
    <div class="container staff-container">
        <div class="text-center text-white">
            <h1 class="fw-bold mb-3">📅 Quản Lý Đặt Chỗ</h1>
            <p class="fs-5 text-white-50">Xem và xác minh đặt chỗ từ khách hàng</p>
        </div>
    </div>
</section>

<!-- Content Section -->
<section class="py-5 bg-light">
    <div class="container staff-container">
        @if (!string.IsNullOrEmpty(Model.ErrorMessage))
        {
            <div class="alert alert-danger alert-dismissible fade show mb-4 animate-fade-in" role="alert">
                <strong>⚠️ Lỗi:</strong> @Model.ErrorMessage
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }

        @if (Model.Bookings.Any())
        {
            <!-- Summary Cards -->
            <div class="row g-3 mb-4">
                <div class="col-md-4">
                    <div class="bg-white p-3 rounded-3 shadow-sm border-start border-5 border-warning">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <small class="text-muted d-block mb-1">Chờ Xác Minh</small>
                                <h3 class="fw-bold text-warning mb-0">@Model.Bookings.Count(b => b.Status == BookingStatus.Pending_Verification)</h3>
                            </div>
                            <div style="font-size: 2.5rem; opacity: 0.3;">⏳</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="bg-white p-3 rounded-3 shadow-sm border-start border-5 border-success">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <small class="text-muted d-block mb-1">Đã Xác Minh</small>
                                <h3 class="fw-bold text-success mb-0">@Model.Bookings.Count(b => b.Status == BookingStatus.Verified)</h3>
                            </div>
                            <div style="font-size: 2.5rem; opacity: 0.3;">✅</div>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="bg-white p-3 rounded-3 shadow-sm border-start border-5 border-secondary">
                        <div class="d-flex align-items-center justify-content-between">
                            <div>
                                <small class="text-muted d-block mb-1">Tổng Đặt Chỗ</small>
                                <h3 class="fw-bold text-dark mb-0">@Model.Bookings.Count</h3>
                            </div>
                            <div style="font-size: 2.5rem; opacity: 0.3;">📊</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="row g-4" id="bookings-grid">
                @foreach (var booking in Model.Bookings.OrderByDescending(b => b.BookingCreatedAt))
                {
                    var (statusClass, statusEmoji, statusText) = booking.Status switch
                    {
                        BookingStatus.Pending_Verification => ("bg-warning text-dark", "⏳", "Chờ Xác Minh"),
                        BookingStatus.Verified => ("bg-success", "✅", "Đã Xác Minh"),
                        BookingStatus.Cancelled => ("bg-danger", "❌", "Đã Hủy"),
                        _ => ("bg-secondary", "❓", "Không xác định")
                    };

                    var verificationBadge = booking.VerificationStatus switch
                    {
                        BookingVerificationStatus.Pending => "bg-secondary",
                        BookingVerificationStatus.Approved => "bg-success",
                        BookingVerificationStatus.Rejected_Mismatch => "bg-danger",
                        BookingVerificationStatus.Rejected_Other => "bg-danger",
                        _ => "bg-secondary"
                    };

                    <div class="col-12 col-md-6 col-lg-4">
                        <div class="booking-card bg-white p-4 rounded-3 shadow-lg h-100 d-flex flex-column staff-card-accent-top-success">
                            <!-- Header -->
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <small class="text-muted d-block mb-1">Mã Đặt Chỗ</small>
                                    <div class="fw-bold text-dark" style="font-family: 'Courier New', monospace; font-size: 0.95rem;">
                                        #@booking.BookingId.ToString().Substring(0, 8).ToUpper()
                                    </div>
                                    <small class="text-muted" style="font-size: 0.75rem;">
                                        @booking.BookingCreatedAt.ToString("dd/MM/yyyy HH:mm")
                                    </small>
                                </div>
                                <span class="badge @statusClass rounded-pill px-3 py-2 animate-badge">
                                    @statusEmoji @statusText
                                </span>
                            </div>

                            <!-- Body -->
                            <div class="mb-3 flex-grow-1">
                                <div class="p-3 bg-light rounded-2 mb-3">
                                    <div class="d-flex align-items-center gap-2 mb-2">
                                        <div style="font-size: 1.2rem;">👤</div>
                                        <div class="flex-grow-1">
                                            <small class="text-muted d-block" style="font-size: 0.7rem;">RENTER ID</small>
                                            <code class="text-dark" style="font-size: 0.85rem;">@booking.RenterId.ToString().Substring(0, 8).ToUpper()</code>
                                        </div>
                                    </div>
                                </div>

                                <div class="p-3 rounded-2 mb-3" style="background: linear-gradient(135deg, #f0fdf4 0%, #dcfce7 100%);">
                                    <div class="d-flex align-items-start gap-2 mb-2">
                                        <div style="font-size: 1.1rem;">🕐</div>
                                        <div class="flex-grow-1">
                                            <small class="text-success fw-semibold d-block" style="font-size: 0.7rem;">BẮT ĐẦU</small>
                                            <div class="text-dark fw-semibold" style="font-size: 0.9rem;">@booking.StartTime.ToString("dd/MM/yyyy")</div>
                                            <small class="text-secondary">@booking.StartTime.ToString("HH:mm")</small>
                                        </div>
                                    </div>
                                    <div class="border-bottom my-2" style="border-color: rgba(16, 185, 129, 0.3);"></div>
                                    <div class="d-flex align-items-start gap-2">
                                        <div style="font-size: 1.1rem;">📅</div>
                                        <div class="flex-grow-1">
                                            <small class="text-success fw-semibold d-block" style="font-size: 0.7rem;">KẾT THÚC</small>
                                            <div class="text-dark fw-semibold" style="font-size: 0.9rem;">@booking.EndTime.ToString("dd/MM/yyyy")</div>
                                            <small class="text-secondary">@booking.EndTime.ToString("HH:mm")</small>
                                        </div>
                                    </div>
                                    @{
                                        var duration = (booking.EndTime - booking.StartTime).TotalHours;
                                    }
                                    <div class="mt-2 pt-2" style="border-top: 1px solid rgba(16, 185, 129, 0.3);">
                                        <small class="text-success fw-semibold">⏱️ Thời gian: @Math.Round(duration, 1) giờ</small>
                                    </div>
                                </div>

                                <div class="d-flex align-items-center justify-content-between">
                                    <small class="text-muted" style="font-size: 0.75rem;">TRẠNG THÁI XÁC MINH</small>
                                    <span class="badge @verificationBadge px-2 py-1" style="font-size: 0.75rem;">
                                        @switch (booking.VerificationStatus)
                                        {
                                            case BookingVerificationStatus.Pending:
                                                @:Chờ Xác Minh
                                                break;
                                            case BookingVerificationStatus.Approved:
                                                @:✓ Đã Duyệt
                                                break;
                                            case BookingVerificationStatus.Rejected_Mismatch:
                                                @:✗ Không Khớp
                                                break;
                                            case BookingVerificationStatus.Rejected_Other:
                                                @:✗ Từ Chối
                                                break;
                                        }
                                    </span>
                                </div>
                            </div>

                            <!-- Footer -->
                            <div class="pt-3 border-top">
                                <a asp-page="./Details" asp-route-id="@booking.BookingId" class="btn btn-success w-100 rounded-pill">
                                    👁️ Chi Tiết
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="text-center py-5">
                <div class="mb-4" style="font-size: 5rem;">📭</div>
                <h3 class="text-secondary mb-2">Chưa có đặt chỗ nào</h3>
                <p class="text-muted">Danh sách đặt chỗ sẽ hiển thị ở đây khi có khách hàng đặt xe.</p>
            </div>
        }
    </div>
</section>
