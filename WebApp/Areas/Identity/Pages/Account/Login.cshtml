@page
@model LoginModel

@{
    ViewData["Title"] = "Đăng Nhập";
}

<link rel="stylesheet" href="~/css/Index.css" />
<link rel="stylesheet" href="~/css/identity.css" asp-append-version="true" />

<!-- Back to Site Link -->
<div class="back-to-site">
    <a asp-page="/Index" class="back-to-site-link">
        <span class="material-icons">arrow_back</span>
        Về Trang Chủ
    </a>
</div>

<div class="auth-page">
    <div class="auth-card">
        <!-- Header -->
        <div class="auth-header">
            <div class="auth-icon">
                <span class="material-icons">login</span>
            </div>
            <h1 class="auth-title">Chào Mừng Trở Lại</h1>
            <p class="auth-subtitle">Đăng nhập để tiếp tục với Voltera</p>
        </div>

        <!-- Body -->
        <div class="auth-body">
            <form method="post">
                <div asp-validation-summary="ModelOnly" class="validation-summary-errors" role="alert"></div>

                <div class="form-floating">
                    <input asp-for="Email" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                    <label asp-for="Email">Email</label>
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-floating">
                    <input asp-for="Password" type="password" class="form-control" autocomplete="current-password" aria-required="true" placeholder="password" />
                    <label asp-for="Password">Mật Khẩu</label>
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-check">
                    <input class="form-check-input" asp-for="RememberMe" />
                    <label class="form-check-label" asp-for="RememberMe">
                        Ghi nhớ đăng nhập
                    </label>
                </div>

                <button id="login-submit" type="submit" class="btn-auth-primary">
                    <span class="material-icons">login</span>
                    Đăng Nhập
                </button>

                <div class="auth-links">
                    <div class="mb-2">
                        <a asp-page="./ForgotPassword" class="auth-link">
                            <span class="material-icons">lock_reset</span>
                            Quên mật khẩu?
                        </a>
                    </div>
                    <div class="auth-divider">
                        <span>hoặc</span>
                    </div>
                    <div>
                        <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl" class="auth-link">
                            <span class="material-icons">person_add</span>
                            Đăng ký tài khoản mới
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
